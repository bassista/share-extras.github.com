---
---
<!doctype html>
<html>
  <head>
    <title>{{ page.title }}</title>
    {% include head.html %}
  </head>
  <body>
    {% include nav.html %}
    <div class="container-fluid">
      <div class="row-fluid">
      <h1>Add-ons</h1>
      </div>
      <div class="row-fluid">
        {% assign pcount = 0 %}
        {% for page in site.pages %}
        {% if page.category == "addon" %}
        {% assign pcount =  pcount | plus:1 %}
        {% capture moduloo %}{{ pcount | modulo:3 }}{% endcapture %}
        <div class="span4">
          <h2>{{ page.projecttitle }}</h2>
          <p>{{ page.projectdesc }}</p>
          <p><a class="btn" href="{{ page.projectname }}/">View details &raquo;</a></p>
        </div><!--/span-->
          {% if moduloo == '0' %}
          </div>
          <div class="row-fluid">
          {% endif %}
        {% endif %}
        {% endfor %}
      </div><!--/row-->
      {% include footer.html %}
    </div><!--/.fluid-container-->
    <!--[if !IE]><script>fixScale(document);</script><![endif]-->
    <a href="https://github.com/share-extras/{{page.projectname}}"><img style="position: absolute; top: 0; right: 0; border: 0; z-index: 1032;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png" alt="Fork me on GitHub"></a>
  </body>
</html>